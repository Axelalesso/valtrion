                <label for="email" class="form-label" style="color: #ffffff ;">Correo</label>
                <input type="email" class="form-control" id="email" placeholder="usuario@email.com"  name="mail">
        
                <label for="tel" class="form-label"  style="color: #ffffff ;">Teléfono</label>
                <input type="text" class="form-control" id="tel" placeholder=""name="tel" >

                <label for="mensaje" class="form-label" style="color: #ffffff ;">Mensaje</label>
                <textarea class="form-control" id="mensaje" rows="3"  name="mensaje"></textarea>
                
                <div class="contenedor-boton">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
        </form>
